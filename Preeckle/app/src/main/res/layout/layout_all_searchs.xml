<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/profileImageSearch"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/profile_black"
        app:siRadius="6dp"
        app:siBorderWidth="0dp"
        app:siBorderColor="@android:color/black"
        app:siSquare="true"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fullnameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/profileName"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16sp"

        app:layout_constraintStart_toEndOf="@+id/profileImageSearch"
        app:layout_constraintTop_toTopOf="@+id/profileImageSearch"
        app:layout_constraintBottom_toBottomOf="@+id/profileImageSearch" />

    <TextView
        android:id="@+id/moreActionsSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="@string/moreActionsPost"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileImageSearch"
        app:layout_constraintBottom_toBottomOf="@+id/profileImageSearch" />
</androidx.constraintlayout.widget.ConstraintLayout>